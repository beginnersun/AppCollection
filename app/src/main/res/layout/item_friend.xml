<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    >

    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/item_contact_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_toRightOf="@id/item_contact_img"
        android:layout_toLeftOf="@+id/item_tv_invite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="黄宏平"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_tv_info"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="欢迎和我一起玩"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/smssdk_lv_item_divider"
        />

</RelativeLayout>